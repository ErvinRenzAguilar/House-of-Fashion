@using EcommApp.Models

@model coupon
@{
    ViewBag.Title = "Add Coupon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="cards">
    </div>
    <div class="content-2">
        <div class="product-listing">
            <div class="title">
                <h2>Add Coupon</h2>
            </div>
            <div class="formBx">
                <br />
                <h2>New Coupon</h2>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group inputBx">
                        @Html.DisplayName("Coupon Code")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.coup_code, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.coup_code, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group inputBx">
                        @Html.DisplayName("Event")
                        @*@Html.LabelFor(model => model.event_id, "ev_id", htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            @* DropDownList(name of database column to save in, viewbag which contains the list of foreign key values, not sure, html attributes like class) *@
                            @Html.DropDownList("event_id", ViewBag.ev_id as SelectList, null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.event_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group inputBx">
                        @Html.DisplayName("Category")
                        @*@Html.LabelFor(model => model.prod_image, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.DropDownListFor(model => model.category, new SelectList(Enum.GetValues(typeof(Category))), "Select Category")
                        <div class="col-md-10">

                        </div>
                    </div>

                    @*<div class="form-group inputBx">
                            @Html.DisplayName("Event")
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.event_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.event_id, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                    <div class="form-group inputBx">
                        @Html.DisplayName("Discount %")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.disc_pct, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.disc_pct, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add New Coupon" class="btn" />
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to Coupons List", "ManageCoupons")
                </div>

