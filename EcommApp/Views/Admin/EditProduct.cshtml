@model EcommApp.Models.product
@using EcommApp.Models

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="cards">
    </div>
    <div class="content-2">
        <div class="product-listing">
            <div class="title">
                <h2>Edit Product</h2>
            </div>
            <div class="formBx">
                <br />
                <h2>Edit existing Product</h2>
                <table>
                    <tr>
                        <th>Product</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    <tr>
                        <td><img src="~/Media/@ViewBag.product.prod_image" alt=""></td>
                        <td>@ViewBag.product.prod_name</td>
                        <td>@ViewBag.product.price</td>
                        <td>@ViewBag.product.stock</td>
                    </tr>
                </table>
                @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.prod_id)

                    <div class="form-group inputBx">
                        @Html.DisplayName("Product Name")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.prod_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.prod_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group inputBx">
                        @Html.DisplayName("Product Description")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.prod_desc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.prod_desc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group inputBx">
                        @Html.DisplayName("Price")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group inputBx">
                        @Html.DisplayName("Stock")
                       <div class="col-md-10">
                            @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.stock, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group inputBx">
                        @Html.DisplayName("Product Image")
                       <div class="col-md-10">
                            <input type="file" name="imgFile" />
                       </div>
                    </div>
                    <div class="form-group inputBx">
                        @Html.DisplayName("Product Category")
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.product_cat, new SelectList(Enum.GetValues(typeof(Category))), "Select Category")
                            </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save Product" class="btn" />
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "ManageProducts")
                </div>
            </div>
        </div>
    </div>
</div>
