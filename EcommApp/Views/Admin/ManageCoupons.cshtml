@model IEnumerable<EcommApp.Models.coupon>
@{
    ViewBag.Title = "Manage Coupons";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="cards">
    </div>
    <div class="content-2">
        <div class="row justify-content-center">
            <div class="title">
                <h2>Coupons</h2>
                
                <p>
                    <a href="\Admin\AddCoupon" class="btn">Add New Coupon</a>
                    
                </p>
            </div>
            <table>
                <tr>
                    <th>
                        @Html.DisplayName("Coupon Id")
                    </th>
                    <th>
                        @Html.DisplayName("Coupon Code")
                    </th>
                    <th>
                        @Html.DisplayName("Event")
                    </th>
                    <th>
                        @Html.DisplayName("Discount %")
                    </th>
                    <th>
                        @Html.DisplayName("Category")
                    </th>
                    
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.coup_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coup_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.@event.ev_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.disc_pct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCoupon", new { id = item.coup_id }) |
                    @Html.ActionLink("Delete", "DeleteCoupon", new { id = item.coup_id })
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
</div>






