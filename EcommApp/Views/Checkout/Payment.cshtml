@using EcommApp.Models;
@model user

@{
    ViewBag.Title = "Checkout";
}
@{
    decimal total = 0;
    List<cart_items> items = ViewData["items"] as List<cart_items>;
    if (items.Count() != 0)
    {
        foreach (var item in items)
        {
            decimal subtotal = item.price * item.quantity;
            total += subtotal;
        }
    }

    //find current user
    EcommDBEntities db = new EcommDBEntities();
    user usr = db.users.Find(Convert.ToInt32(Session["user_id"]));
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height:200px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Checkout</h1>
    </div>
</div>
<!-- Page Header End -->
<!-- Checkout Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4">
                <h4 class="font-weight-semi-bold mb-4">Customer Shipping Details</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>First Name</label>
                        <input class="form-control" type="text" value="@usr.first_name" readonly>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Last Name</label>
                        <input class="form-control" type="text" value="@usr.last_name" readonly>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="text" value="@usr.email" readonly>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Mobile Number</label>
                        <input class="form-control" type="text" placeholder="Enter your mobile number">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address</label>
                        <input class="form-control" type="text" placeholder="Enter your address">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                </div>
                <div class="card-body">
                    <h5 class="font-weight-medium mb-3">Products</h5>
                    @*Show cart items here*@
                    @foreach (var item in items)
                    {
                        <div class="d-flex justify-content-between">
                            <p>@item.item_name (@item.quantity)</p>
                            <p>₱@item.price</p>

                        </div>
                    }
                    <hr class="mt-0">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
                        <h6 class="font-weight-medium">₱@total</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">₱50</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
                        <h5 class="font-weight-bold">₱@(total + 50)</h5>
                    </div>
                </div>
            </div>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Payment</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="paypal">
                            <label class="custom-control-label" for="paypal">Paypal</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="paypal">
                            <label class="custom-control-label" for="cod">Cash on Delivery</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                            <label class="custom-control-label" for="bank">Bank Transfer</label>
                        </div>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <a href=""><button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" onclick="paymentalert()">Place Order</button></a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Checkout End -->