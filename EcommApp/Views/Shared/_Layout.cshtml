@using EcommApp.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")

    <!-- Favicon -->
    <link href="~/Media/polo-shirt.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body>
    <!-- Topbar Start -->
    <div class="row align-items-center py-3 px-xl-5">
        <a href="/Home/Shop" class="text-decoration-none">
            <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1"> house of fashion</span></h1>
        </a>
        <div class="col-lg-6 col-6 text-left">
        </div>
        <div class="col-lg-3 col-6 text-right">
        </div>
    </div>
    <!-- Topbar End -->

    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">
            <!-- Navbar Start -->
            <div class="col-lg-3 d-none d-lg-block">
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="/Home/Shop" class="nav-item nav-link">All Products</a>
                            <a href="/Home/Shirt" class="nav-item nav-link">Shirts</a>
                            <a href="/Home/Jeans" class="nav-item nav-link">Jeans</a>
                            <a href="/Home/Dresses" class="nav-item nav-link">Dresses</a>
                            <a href="/Home/Shorts" class="nav-item nav-link">Shorts</a>
                            <a href="/Home/Swim" class="nav-item nav-link">Swimwear</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0">
                            <a href="/Home/AboutUs" class="nav-item nav-link">About Us</a>
                            <a href="#bottom_link" class="nav-item nav-link">Contact</a>
                            <a href="/Account/Logout" class="nav-item nav-link">Logout</a>
                            <a href="/Checkout/Cart" class="nav-item nav-link">
                                <i class="fas fa-shopping-cart text-primary"></i>
                                
                            </a>
                        </div>
                    </div>
                </nav>
                <!-- Navbar End -->
                @RenderSection("Carousel", false)
            </div>
        </div>
    </div>
    @RenderBody()
    <hr />
    <footer>
        <!-- Footer Start -->
        <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
            <div class="row px-xl-5 pt-5">
                <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                    <p><b>If you have any concerns, you can contact us here.</b></p>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>123 ATOS Syntel Inc.</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>hof.group1@atos.net</p>
                    <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>+00 123 4567</p>
                </div>
            </div>
        </div>
        <div class="row border-top border-light mx-xl-5 py-4">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-dark">
                    &copy; <a class="text-dark font-weight-semi-bold"></a>House of Fashion. All Rights Reserved 2022.
                <p id="bottom_link"></p>
            </div>
        </div>
    </footer>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>







