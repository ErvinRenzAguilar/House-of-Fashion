@using EcommApp.Models;
@{
    EcommDBEntities db = new EcommDBEntities();
    ViewBag.Title = "All Products";
    var queryTops = from p in db.products
                    where p.product_cat == "Shirt"
                    select p;


    var queryjeans = from p in db.products
                     where p.product_cat == "Jeans"
                     select p;

    var queryswim = from p in db.products
                    where p.product_cat == "Swimwear"
                    select p;

    var querydress = from p in db.products
                     where p.product_cat == "Dress"
                     select p;

    var queryshorts = from p in db.products
                      where p.product_cat == "Shorts"
                      select p;


    int topnum = queryTops.Count();
    int jeansnum = queryjeans.Count();
    int swimnum = queryswim.Count();
    int dressnum = querydress.Count();
    int shortnum = queryshorts.Count();
}

<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height:200px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">SHOP IN STYLE</h1>
    </div>
</div>
<!-- Page Header End -->
}

<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <!-- Tops Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Tops</h5>
                <form>
                    <div class="">
                        <span class="badge border font-weight-normal">@topnum.ToString() stocks</span>
                        <a href="/Home/Shirt">Shirts</a>
                    </div>
                    <div class="">
                        <span class="badge border font-weight-normal">@dressnum.ToString() stocks</span>
                        <a href="/Home/Dresses">Dresses</a>
                    </div>
                </form>
            </div>
            <!-- Tops End -->
            <!-- Bottoms Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Bottoms</h5>
                <form>
                    <div class="">
                        <span class="badge border font-weight-normal">@jeansnum.ToString() stocks</span>
                        <a href="/Home/Jeans">Jeans</a>
                    </div>
                    <div class="">
                        <span class="badge border font-weight-normal">@shortnum.ToString() stocks</span>
                        <a href="/Home/Shorts">Shorts</a>
                    </div>

                </form>
            </div>
            <!-- Bottoms End -->
            <!-- Swimwear Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Summer fit</h5>
                <form>
                    <div class="">
                        <span class="badge border font-weight-normal">@swimnum.ToString() stocks</span>
                        <a href="/Home/Swim">Swimwears</a>
                    </div>
                </form>
            </div>
            <!-- Swimwear End -->
        </div>

        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <form action="">
                            <div class="input-group">
                                <div class="input-group-append">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                @foreach (var item in ViewData["prodList"] as List<product>)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <a href="/Product/Details/@item.prod_id"><img class="img-fluid w-100" src="/Media/@item.prod_image" alt=""></a>
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.prod_name</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>@item.price</h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/Home/AddToCart?prodId=@item.prod_id&prodname=@item.prod_name&qty=1&price=@item.price" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->